generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


//-----------Enums-----------------
enum IncomeRenge {
  LOW
  MEDIUM
  HIGH
}

enum SavingStyle {
  DAILY
  WEEKLY
  GOAL_BASED
}

enum TransactionType{
  SAVE
  WITHDRAW
}

enum TransactionStatus {
  SUCCESS
  FAILED
}

enum GoalStatus {
  ACTIVE
  COMPLETED
}

//-----------------Models--------------------

model User {
  id              String      @id     @default(uuid())
  phone           String              @unique
  createdAt       DateTime            @default(now())

  //segmentation to be used later

  incomeRange     IncomeRenge?
  savingStyle     SavingStyle?
  state           String
  
  wallets         Wallet[]
  transactions    transaction[]
  savingGoal      SavingGoal[]
}

model Wallet {
  id              String    @id     @default(uuid())
  userId          String
  balance         Decimal           @default(0)
  currency        String            @default("NGN")
  createdAt       DateTime          @default(now())

  user            User      @relation(fields: [userId], refrences: [id])
  transactions    Transaction[]
}

model Transaction {
  id              String    @id      @default(uuid())
  walletId        String
  userId          String

  amount          Decimal
  type            TransactionType
  status          TransactionStatus
  createdAt       DateTime           @default(now())

  wallet          Wallet    @relation(fields: [walletId], refrences: [id])
  user            User      @relation(fields: [userId], refrences: [id])

  @@index([userId])
  @@index([walletId])
}

model SavingGoal {
  id              String    @id      @default(uuid())
  userId          String
  targetAmount    Decimal            @default(0)
  currentAmount   Decimal            @default(0)
  deadline        DateTime?
  status          GoalStatus         @default(ACTIVE)

  createdAt       DateTime           @default(now())

  user            User      @relation(fields: [userId], refrences: [id])

  @@index([userId])
}